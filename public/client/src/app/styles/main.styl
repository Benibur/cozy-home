shadow()
  -moz-box-shadow: arguments
  -webkit-box-shadow: arguments
  box-shadow: arguments

rounded-border()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments
  

bgcolor = #F4D1A9
maintitlecolor = #d46a2c
titlecolor = #d46a2c
linkcolor = #f68C4E
menuhovercolor = #ffced8
menuunselectedcolor = #c9b5a5

body
  background-color: bgcolor
  
a
  color: linkcolor
  font-weight bold

a:hover
  color: black

h2
  color maintitlecolor
  font-size 30px
  margin-bottom 24px
  margin-top 24px

.spacer
  clear both

.container
  padding 0
  margin-top 40px
  margin-bottom 40px
  background-color white
  width 960px
  border 2px solid #999 
  rounded-border 3px 3px 3px 3px
  shadow 3px 3px 4px 1px #b09782
  min-height 600px

.close 
  float right

.hidden
  display none

#text-container
  width 610px

/* Header */

#header
  padding 12px 12px
  margin-top 0px
  margin-bottom 40px
  background-color white
  width 936px
  border 2px solid #999 
  border-top 0
  rounded-border 0px 0px 3px 3px
  shadow 3px 3px 4px 1px #b09782
  margin auto
  text-align right
  min-height 40px

#header h2
  float left
  margin-top 3px
  color linkcolor

#header a 
  color maintitlecolor
  text-decoration none

#header .alert
  float left
  padding 10px
  margin 0 6px 0 18px

#header p
  margin 0


/* Dialogs */

#confirm-dialog
  display none


/* Misc */

#header-title span
  margin-left 12px

#header #buttons
  margin-top 6px

#content
  padding 24px

.application 
  width 150px
  height 150px
  margin-left 12px
  margin-top 12px
  font-size 42px
  line-height 48px
  display inline-block

.application-inner
  width 136px
  height 136px
  padding 24px
  border 4px solid linkcolor

.application a:hover
  color linkcolor


/** Login page */

#login-error
  display inline-block

#logout-button
  display none

#login-error
  width 360px

#login-view 
  text-align center

#login-password
  width 400px
  font-size 36px
  padding 6px
  height 48px
