
@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-200.otf');

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf');


blue = #15a7c7
darkblue = #363a46
darkred = #C66666
darkgreen = #66C666
orange = #C60 + 20%
orangewhite = #fcf9f5


html
    height 100%
    padding 0
    margin 0

body
    height 100%
    padding 0
    margin 0
    background-color: orangewhite
    box-sizing: border-box
    min-width: 320px
    color: darkblue
    font-family: styled
    font-size: 18px

a
    color: blue
    font-weight: bold

a
    color: textcolor
    text-decoration: none

a:hover
    color: orange

iframe
    width 100%
    height 100%
    border 0
    box-shadow: inset 0px -1px 2px  #BBB

.tooltip-inner
    a:hover
        color: textcolor
        text-decoration: none

.ma2
    margin: 20px

.ma2
    padding: 20px

.spacer
.spacer
    clear both

.close
    float right

.hidden
    display: none

.center
    text-align center
