@font-face
    font-family: styled
    src: url('/fonts/maven-pro-light-200.otf')

@font-face
    font-family: main
    src: url('/fonts/signika-regular.ttf')

blue = #15a7c7
darkblue = #363a46
darkred = #C66666
darkgreen = #66C666
orange = #C60 + 20%
orangewhite = #fcf9f5
lightgrey = #f7f4f0
lightgreyblue = #f0f4f7

html
    height 100%
    padding 0
    margin 0

body
    height 100%
    padding 0
    margin 0
    background-color: orangewhite
    box-sizing: border-box
    min-width: 320px
    color: black
    font-family: styled
    font-size: 18px

a
    color: blue
    font-weight: bold

a
    color: textcolor
    text-decoration: none

a:hover
    color: orange

iframe
    width 100%
    height 100%
    border 0

input
select
    background: white
    font-family: styled
    text-align: center
    font-size: 30px
    height: 60px
    width: 550px
    padding: 10px
    border-radius: 0.4em
    border: 0
    color: blue
    box-shadow: 0 0 0 0
    border: 1px solid white
    transition: all 0.2s

input:hover
select:hover
    border: 1px solid blue

input:focus
select:focus
    color: orange
    box-shadow: 0 0 0 0
    border: 1px solid orange + 50%

.w500
    max-width: 500px

.w600
    max-width: 600px
    margin: auto

.w800
    max-width: 800px
    margin: auto

.tooltip-inner
.tooltip-inner
    a:hover
        color: textcolor
        text-decoration: none
.ma2
    margin: 20px

.pa2
    padding: 20px

.par2
    padding-right: 20px

.mt6
    margin-top: 60px

.spacer
.spacer
    clear both

.close
    float right

.hidden
    display: none

.center
    text-align center

.btn
    background: blue
    border: 1px blue - 20%
    margin: 0
    font-family: main
    color: white
    padding: 5px
    border-radius: 4px
    cursor: pointer
    transition: all 0.3s

.btn:hover
    color: white
    background: orange
    border-color: 1px solid orange
    color: whit

.btn:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 0 0
    background: orange - 10%
    color: white

.green
    background: darkgreen

.red
    background: darkred

.lightgrey
    background: lightgrey

.alert-error
.alert-success
    display: none
    border-radius: 5px
    font-family: styled
    font-size: 20px
    padding: 20px
    color: white

.alert-error
    background: darkred

.alert-success
    background: darkgreen

.light-btn
    background: transparent
    margin: 0
    font-family: main
    color: blue
    padding: 5px
    margin-right: 5px

.opaque
    opacity: 1 !important


input[type=checkbox]
    margin-top: 8px

.roundedOne 
    width: 28px
    height: 28px
    background: #fcfff4

    background: linear-gradient(top, #fcfff4 0%, #dfe5d7 40%, #b3bead 100%)
    margin: 20px auto

    border-radius: 50px

    box-shadow: inset 0px 1px 1px white, 0px 1px 3px rgba(0, 0, 0, 0.5)
    position: relative

.roundedOne label 
    cursor: pointer
    position: absolute
    width: 20px
    height: 20px

    left: 4px
    top: 4px
    border-radius: 50px

    box-shadow: inset 0px 1px 1px rgba(0,0,0,0.5), 0px 1px 0px rgba(255,255,255,1)
    background: linear-gradient(top, #222 0%, #45484d 100%)

.roundedOne label:after 
    opacity: 0
    content: ''
    position: absolute
    width: 16px
    height: 16px
    background: #00bf00

    top: 2px
    left: 2px

    box-shadow: inset 0px 1px 1px white, 0px 1px 3px rgba(0,0,0,0.5)
    background: linear-gradient(top, #00bf00 0%, #009400 100%)
    border-radius: 50px

.roundedOne label:hover::after 
    opacity: 0.3

.roundedOne input[type=checkbox]:checked + label:after 
    opacity: 1
