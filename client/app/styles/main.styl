
@import 'nib'

@import 'base/_colors'
@import 'base/_grid'
@import 'base/_alerts'
@import 'base/_buttons'
@import 'base/_form'
@import 'base/_reset'

@import 'components/_modal'
@import 'components/_notifications'
@import 'components/_desktop'
@import 'components/_help'
@import 'components/_settings'
@import 'components/_status'
@import 'components/_store'
@import 'components/_object-picker'



.home-body
    display flex
    flex-direction column
    justify-content flex-start
    align-items stretch
    overflow hidden
    box-sizing border-box
    width 100%
    height 100%
    padding 36px 0 0 0
    margin 0

#app-frames
    height 100%

#content
    height 100%
    overflow auto
    transition 0.6s background-image ease-in-out
    background-position center center
    background-repeat no-repeat
    background-attachment fixed
    background-size cover

#home-content
    display flex
    min-height 100%

    section
        flex 1

// related to store, status, settings and help pages
.platform-section
#help-view .help-section
#account-view #account-form
    min-height calc(100vh - 36px)
    padding (30/16)em
    background-color grey-01


// navbar
// ========================================================
.navbar
    position fixed
    background grey-08
    z-index 1500
    top 0
    width 100%
    height 36px
    padding 0

#menu-applications-container
    margin auto
    max-width (300/16)em
    text-align center
    color grey-03
    text-transform uppercase

    #current-application
        line-height 36px


// Status - Config device
// ========================================================
.config-device
    padding 0
    margin-bottom 5px
    border-radius 5px

    .btn
        text-align left

    strong
    .mod
        display inline-block

    .mod.left
        margin 0

    .smaller
        font-family 'Source Sans Pro', sans-serif

    .md-header
        background transparent

    .md-footer
        padding 0

        .btn
            font-weight normal

    &:hover
        .dataLine
            text-shadow none

        .docTypeLine
            text-shadow none

#config-applications-view
    .w50
        padding 20px

    .change-layout
        img
            margin-left 5px
            margin-bottom 7px
            width 60px

        a
            color grey-08
            font-weight normal

            &:hover
                color blue


// Responsive
// ========================================================
@media (max-width 1200px)
    .application .application-inner
        padding 0px 10px

    #help-view
    #account-view
    #config-applications-view
        .w50
            width 100%
            padding 0

        .personalisation
            margin-bottom 30px


@media (max-width 850px)

    #applications-view
        padding 10px
        margin-bottom 20px

    #market-view
        span
            display none

    dialog
        width 96vw

    #app-list
        section
            h2
                padding-left 13px


@media (max-width 800px)

    .back-button
        span
            display none

    .pa2
        padding 10px

    #config-applications-view
        .w50
            padding 10px

    .platform-section
        padding 10px

    .application .application-inner
        padding 0

        .app-title
            font-size 14px

    .md-content
        overflow auto

    .md-modal
        position fixed
        bottom 0
        width 100%
        height 90%
        z-index 2000
        visibility hidden
        backface-visibility hidden
        margin 0
        padding 0

    .section-title
        display none

    .home-body
        box-shadow none

    img
        margin 10px 10px 0 0

    h3
        margin-top 20px
        margin-bottom 0
        padding-bottom 0
        line-height 16px

    .comment
        font-size 14px

    #buttons
        width 100%
        height 100%

        .nav
            margin 0
            height 20px

        .app-button
            display none
            height 60px

        li
            margin 0

            a
                margin 0
                min-height 20px
                height 20px

    #market-view
        h3
            margin-bottom 10px

    #notifications
        .notification
            a.doaction
                width 300px

    #config-applications-view
        .w33
            width 100%

        .w66
            width 100%

        .config-applications
            .buttons
                display block


        .change-layout, .disk-space, .memory-free, .stack-app
            img
                width 32px
                margin 0px
                margin-right 5px

        .sys-infos .line
            display inline-block
            clear none

        .sys-infos div
            margin-top 5px

        .platform .line
            img
                width 32px
                margin 0px
                margin-right 5px

        h4
            margin-bottom 20px

        .stack-app
            .line
                display block

@media (max-width 640px)

    #account-view
        p
            margin 10px 0

        input
        select
            width 100%
            font-size 16px

    #home-content
        padding 0

    #no-app-message
        width 100%

    #market-view
        padding 0

        .right
            img
                display none

    #help-view
        p.help-text
            font-size 20px

    #config-applications-view
        .w66
            padding-right 10px

    .application .application-inner
        .app-title
            font-size 12px

    #app-list
        section
            h2
                padding-left 8px

@media (max-width 500px)

    #config-applications-view
        .mod.w25
        .mod.w75
        .mod.w33
        .mod.w66
        .mod.w50
            width 100%

    #home-menu
        .logout-menu-icon
            display block

    #app-list
        section
            h2
                font-size 12px

    .application .application-inner
        padding 0

        img.icon
            padding 5px

        .app-title
            margin-top 4px
            font-size 9px
            text-transform capitalize

    #market-view
        #your-app

            #app-git-field
                font-size 16px

        .cozy-app
            h3
                font-size 26px

        .app-text
            padding 10px

    #notifications
    #notifications-buttons
        width 310px

        .notification
            a.doaction
                width 260px

    #config-applications-view
        .config-application
            .mod.left
                width 100%
                margin-bottom 10px

    #content
        #home-menu
            .menu-btn:hover
                background none
                background-color transparent

                span
                    display none


span.app
    font-weight bold
