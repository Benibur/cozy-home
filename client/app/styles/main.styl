@import 'nib'

shadow()
  -moz-box-shadow: arguments
  -webkit-box-shadow: arguments
  box-shadow: arguments

rounded-border()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments
  

bgcolor = #9999AD
bgshadowcolor = #666688
maintitlecolor = #d46a2c
titlecolor = #d46a2c
linkcolor = #f68C4E
menuhovercolor = #ffced8
menuunselectedcolor = #c9b5a5
shadowcolor = #444
bgcolorbuttons = #f69C5E
bgclearcolorbuttons = #f6BD8F
bgcolorhoverbuttons = #f6AC7E
bgclearcolorhoverbuttons = #f6CD9F
textcolorapplication = #FFEFF3


body
  background-color: bgcolor
  min-width: 380px
  
a
  color: linkcolor
  font-weight bold

a:hover
  color: black

h2
  color maintitlecolor
  font-size 30px
  margin-bottom 24px
  margin-top 24px

.spacer
  clear both

.container
  padding 0
  background-color white
  width 100%
  rounded-border 3px 3px 3px 3px
  shadow 3px 3px 4px 1px bgshadowcolor
  min-height 260px

.close 
  float right

.hidden
  display: none

.center 
  text-align center

#text-container
  width 610px

/* Header */

#header
  margin-top 0px
  margin-bottom 8px
  background-color white
  shadow 3px 3px 4px 1px bgshadowcolor
  text-align right
  min-height 70px

#header h2
  float left
  margin-top 3px
  color linkcolor

#header a 
  color maintitlecolor
  text-decoration none

#header .alert
  float left
  padding 10px
  margin 0 6px 0 18px

#header p
  margin 0


/* Dialogs */

#confirm-dialog
  display none


/* Misc */


#header #buttons
  float right
  margin 20px 12px 0 0

#header
  text-align: left
  width 100%

#header-title
  padding 12px

#content
  padding 24px

#app-list
    margin-bottom 0px
    margin-left 6px

.application 
  width 155px
  height 250px
  margin 6px
  margin-bottom 64px
  font-size 42px
  line-height 48px
  float left

.application-inner
  text-align center
  width 140px
  height 250px
  border 2px solid linkcolor
  shadow 1px 1px 3px shadowcolor
  border-radius 12px
  color white
  background linear-gradient(top, bgclearcolorbuttons 0%, bgcolorbuttons 100%)

.application a:hover
  text-decoration: none

.application-inner:active
  shadow none

.application-inner:hover  
  background linear-gradient(top, bgclearcolorhoverbuttons 0%, bgcolorhoverbuttons 100%)

.application-inner img
  margin-top: 10px

.app-title
  font-size: 30px
  line-height: 30px
  font-weight: bold
  margin-top: 10px

.info-text
  font-size: 14px
  line-height: 20px

.app-tools 
    margin 12px

#logout-button
  display none

.modal
    width: 340px
    margin: auto
    top: 10%
    left: auto

#add-app-form input
  width: 96%

#add-app-submit
  font-weight: bold
  font-size: 20px

.install-info
  width: 40%
  text-align center

.broken
  .application-inner
  .application-inner:hover  
    background: linear-gradient(top, #AAA 0%, #666 100%)
    border-color: #AAA
  .broken-notifier
    font-size: 18px
    color: red

.application-outer
  display:none

.loading-indicator
  margin-top: 15px
  border: 0
  background: transparent


/* Login page */

.main-alert
  display inline-block

#login-error
  width 360px

#login-view 
  text-align center

#login-password
  width 400px
  font-size 30px
  padding 6px
  height 48px
  
a
  cursor pointer


/* Register page */

#register-view input
  width 400px
  font-size 30px
  padding 6px
  height 48px

#register-error
  width 780px

// Account page

#reset-view h1
#account-view h1
  color titlecolor
  margin-bottom 40px
