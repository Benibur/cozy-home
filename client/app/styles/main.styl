@import 'nib'

@font-face 
  font-family: styled
  src: url('/fonts/maven-pro-light-300.otf');

@font-face 
  font-family: main
  src: url('/fonts/signika-regular.ttf');


bgshadowcolor = #666688
shadowcolor = #444
bgcolorbuttons = #8CA6AE
bgclearcolorbuttons = bgcolorbuttons + 50%
appbordercolor = bgcolorbuttons - 20%
bgcolorhoverbuttons = bgcolorbuttons + 20%
bgclearcolorhoverbuttons = bgcolorbuttons + 70%
textcolor = #EAF1F1
buttoncolor = #CAD1D1 + 60%
highlightcolor = #E2F8FF
bgcolor = #545e5f + 20%



body
  min-width: 320px
  color: textcolor
  font-family: styled
  font-size: 18px
  
a
  color: linkcolor
  font-weight bold

a
a:visited
a.editable-click
  color: textcolor
  border-bottom: 1px dashed textcolor

a.editable-click:hover
  color: orange
  border-bottom: 1px dashed textcolor

.spacer
  clear both

.close 
  float right

.hidden
  display: none

.center 
  text-align center

.btn
    background: buttoncolor
    border: 1px solid buttoncolor - 20%
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.4) inset, 0 1px 2px rgba(0, 0, 0, 0.05)
    margin: 0
    font-family: styled

.btn-group
    .btn
        font-size: 16px

.btn:hover
    background: buttoncolor + 60%
    box-shadow: 0 0 8px highlightcolor

.btn:active
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 0 8px highlightcolor
    background: buttoncolor - 10%

.progress
    margin: 20px 0
    height: 10px
    background: bgcolor - 30%

.progress .bar
    background: highlightcolor
    box-shadow: 0 0 6px highlightcolor

#content
  padding: 0
  height: 100%
  overflow: auto


/* Header */

#header
  position relative
  margin-top 0px
  margin-bottom 0px
  background-color white
  border-bottom 1px solid #CCC
  background-color: white

  .navbar-inner
    padding-right 5px
    rounded-border 0 0 0 0
    background-color white
    background-image none
    height 100%

  h2
    float left
    color linkcolor

  a 
    text-decoration none

  p
    margin 0

  a:hover
    color: linkcolor 



#buttons
  float right

#header-title
  width: 17%
  font-size: 20px
  margin: 0


@media (max-width: 700px)
  #header-title
    display: none

/* Dialogs */

#confirm-dialog
  display none

/** Applications */

#app-list
    text-align: center
    margin: 40px 0

  button 
      margin-top: 20px

.application
  width: 170px
  margin: 6px
  display: inline-block
  text-align: center
  border 1px solid appbordercolor
  box-shadow 1px 1px 3px shadowcolor
  border-radius 12px
  background linear-gradient(top, bgclearcolorbuttons 0%, bgcolorbuttons 100%)
  padding-bottom: 20px

  img
      margin-top: 10px

  p
      margin: 0
      font-family: main
      color textcolor
      text-shadow 1px 1px 1px shadowcolor

  a:hover
      text-decoration: none


.application:active
  box-shadow none

.application:hover  
  background linear-gradient(top, bgclearcolorhoverbuttons 0%, bgcolorhoverbuttons 100%)

.app-title
  font-size: 20px
  line-height: 30px
  font-weight: bold

.info-text
  font-size: 14px
  line-height: 20px

.app-tools 
    width: 50%    
    margin-left: auto
    margin-right: auto
    margin-top: 12px
    color: text-color
    text-align: center

.modal
    width: 540px
    margin: auto - 270px 
    top: 10%
    background: bgcolor

.modal-header
    border: 0


.modal-footer
    background: bgcolor
    border: 0

.well
    background: bgcolor + 70%
    background: transparent
    border: 0
    margin: 2%
    color: bgcolor - 20%
    color: textcolor
    text-align: center

#no-app-message
    margin-top: 30px

.control-group
#add-app-form
#account-form
    border: 0

    select
    input
        font-size: 1em
        height: 1.1em
        padding: 0.2em
        border-radius: 0.4em
        border: 0
        background-color: textcolor
        box-shadow: 0 2px 2px rgba(0, 0, 0, 0.45) inset

    select
        height: 35px

    input:focus
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.75) inset, 0 0 17px rgba(82, 168, 236, 0.9)
        background: #e2f8ff

    .btn
        margin-top: 0.2em 

#account-form
.control-group
    select
    input
        font-size: 1em
 

#app-description-field
#app-git-field
  width: 96%

#app-name-field
  width: 140px

#add-app-submit
  font-weight: bold
  font-size: 20px
  color: bgcolor - 30%
  text-shadow: 0 0 0

.install-info
  width: 40%
  text-align center

.broken
  .application-inner
  .application-inner:hover  
    background: linear-gradient(top, #AAA 0%, #666 100%)
    border-color: #AAA
  .broken-notifier
    font-size: 18px
    color: red

.application-outer
  display:none

  .btn
      margin-top: 10px

.loading-indicator
  margin-top: 10px
  margin-left: 10px
  border: 0
  background: transparent

#add-app-close
#add-app-submit
  margin-top: 5px

// Account page

#account-form
  margin-bottom: 0
  font-size: 1.3em

  p
      margin: 20px 0 10px 0

  p.field 
      margin: 10px 0 20px 0

  .icon-white
      background-image: url("../img/glyphicons-halflings.png")

  .alert 
      width: 50%
      margin: auto

#account-info
#account-error
  display: none
  margin-bottom: 0

#home-view 
    overflow:hidden
    background: bgcolor
    width: 100%
    height: 100%
    padding: 0
    margin: 0

#account-view 
  .loading-indicator
    margin-left 40px

#change-password-button
    margin-top: 50px

#change-password-form
    margin-top: 50px

// Applications

iframe
    width 100%
    height 100%
    border 0

body
    height 100%
    padding 0
    margin 0
        
html
    height 100%
    padding 0
    margin 0
        
html
    height 100%
        
.home-body
    width:100%
    height: 100%
    padding: 0
    margin: 0
    box-shadow: inset 0 0 100px #2b4244 + 20%
    background: bgcolor 
    overflow: hidden

.navbar .nav
    float: right

    img
        box-shadow: 1px 1px 1px shadowcolor 

#buttons
    text-align right
    width: 83%

@media (max-width: 600px)
  #buttons span
    display: none

@media (max-width: 600px)
  #buttons
    width: 100%
        
#app-frames
    height 100%
    display:none
    text-align: center

.navbar .nav
    float: right

#buttons
    text-align right
    width: 83%

.application-outer
    p
        margin: 0
        padding: 0

@media (max-width: 600px)
  #buttons span
    display: none

@media (max-width: 600px)
  #buttons
    width: 100%
