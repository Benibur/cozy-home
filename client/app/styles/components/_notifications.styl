#menu-applications-toggle
    height 36px
    color white
    margin auto
    text-transform capitalize
    opacity 1

    span
        font-size 22px
        padding-top 5px

    #current-application
        cursor default
        font-size 18px
        opacity 0.8
        color white
        font-weight normal
        text-transform uppercase
        line-height 34px

#menu-applications-container
    margin auto
    max-width 300px
    text-align center
    height 30px

#notifications-toggle
    transition all 0.3s
    display block
    height 36px
    line-height 34px
    width auto
    cursor pointer
    margin 0 5px 0 0
    padding 0 10px
    width 36px
    height 36px

    i
        color grey-05
        transition color 0.2s ease

    &:hover
        i
            color grey-02

    #notifications-counter
        position absolute
        top 3px
        right 3px

        height 20px
        width 20px
        border-radius 50%
        line-height 17px
        font-size 15px

        text-align center
        background red
        color #fff
        border 2px solid grey-08
        transition background 0.2s ease

        &:empty
            padding 0


    .backcolor
        position absolute
        top 15px
        left 12px
        border-radius 10px
        z-index -1
        display block
        background-color white
        width 20px
        height 20px
        opacity 0
        transition all 0.3s


#notifications-toggle.highlight
    img
        opacity 1



#notifications-container
    position relative
    padding 0

    a
        color blue

    .badge
        padding 1px 2px 1px 3px
        position absolute
        top 2px
        right 2px

    .badge:empty
        display none

    #clickcatcher
        position fixed
        width 100%
        height 100%
        background-color red
        opacity 0.001
        top 40px
        left -420px
        z-index 10


#notifications
    position fixed
    right 0
    top 36px
    bottom 100px
    padding 5px
    width 26em
    z-index 50
    color white
    text-align left
    background-color rgba(grey-08, .95)
    overflow-y auto

    ul
        margin 0
        padding 10px

        li
            padding 10px 0
            border-bottom 1px solid grey-07
            list-style-type none
            line-height 1.25em

    .notification:hover
        a.dismiss
            cursor pointer
            display block

    .notification
        .notification-date
            color grey-03
            font-size 12px

        a.dismiss
            display none
            float right
            line-height 20px
            padding 5px
            color white

        a.doaction
            display none
            color white
            cursor pointer
            margin-top 5px
            font-size 12px
            padding 3px
            background blue
            text-align center

            &:hover
                background blue - 20%

        &:hover
            a.doaction
                display block


#notifications-buttons
    position fixed
    bottom 0
    right 0
    height 100px
    width 26em
    padding 10px
    z-index 50
    overflow-y none
    background-color rgba(grey-08, .95)

    .btn
        display block
        margin-bottom 10px
        text-align center
        cursor pointer
        font-size 16px
        padding 5px
        width 100%

        &:last-child
            margin-bottom 0

        &:hover
            background-color blue - 20%


@media screen and (-webkit-min-device-pixel-ratio: 0)

    #menu-applications-toggle
        span
            padding-top 10px
