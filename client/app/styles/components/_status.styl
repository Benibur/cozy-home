// Status - Config application

.title-app a.subtitle
    display inline-block
    font-size 15px

.sys-infos
   padding-right 20px

#config-application-list
    margin-top 10px

.config-application:first-child
    border-top 0

.config-application
    border-top 1px solid grey-03
    padding 10px 0
    margin-bottom 10px
    border-radius 5px

    strong
        text-transform lowercase
        font-size 20px

        a
            color grey-08

    .smaller
        font-family 'Source Sans Pro', sans-serif
        display flex
        align-items center

        input
            margin 0 5px 0

    .favorite
        cursor pointer

    .md-header
        background transparent

    .md-footer
        padding 0

        .btn
            font-weight normal

    .buttons
        align-items center

        button
        a
            width 100%
            display inline-block
            margin 0 0 2px
            min-width 24px
            min-height 24px
            font-size 12px
            text-align left

    .comments
        clear both
        font-size 14px
        line-height 20px
        margin-left 2em

        img
            overflow hidden
            display inline-block
            margin 0 5px 0 0

        a
            color grey-05

        @media (max-width: 800px)
            margin-left 0

    .to-update-label
        background-color green
        color white
        padding 3px 6px
        margin-left 26px
        font-size 12px
        border-radius 3px
        text-transform lowercase


#config-applications-view
    .stack-app

        .app
            font-weight normal

        .btn
            width 100%
            text-align left
            margin-bottom 2px
            display block
            font-size 12px

            .fa
                margin-top 2px
