button::-moz-focus-inner
    border 0

.btn
    margin 0
    padding (8/16)em (12/16)em

    background blue
    border 1px blue - 20%
    border-radius 2px
    cursor pointer

    font-family 'Source Sans Pro', sans-serif
    font-size 1em
    color white
    text-transform uppercase

    transition all 0.3s

    &.btn-green
        background-color green

    &:hover
        background blue - 20%
        border-color 1px solid blue - 20%

        color white

    &:active
        box-shadow 0 0
        background blue - 25%


.light-btn
    margin-right 5px

    background transparent

    color blue

    &:hover
        background-color grey-01
        color blue


.back-button
    margin-left 15px
    margin-top .8rem

    font-family 'Source Sans Pro', sans-serif
    text-transform uppercase
    color grey-05

    transition color 0.2s ease

    &:hover
        color grey-02

    span
        margin-left 0.5em

button.btn
    display inline-flex
    vertical-align top
    text-align center

    .spinholder
        margin auto
        width 100%
        height 100%
        max-width 100%
        max-height 100%

        img
            display block
            width 100%
            height 100%
            max-width 100%
            max-height 100%
