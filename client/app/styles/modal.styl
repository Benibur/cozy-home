radius = 3px

.modalCY
    display:flex
    flex-direction:column
    position:absolute
    top:25%
    left:50%
    transform: translateX(-50%) translateY(-50%)
    height:80%
    width:90%
    max-width:100em
    z-index:100000
    overflow:hidden
    background-color:white
    border-radius: radius

    .modalCY-header
        flex-shrink:0
        background-color:white
        color: #333333
        border-bottom: 1px solid #eee
        font-family: styled
        color: #333
        font-size: 1.7em;
        padding: 20px;
        border-top-left-radius: radius
        border-top-right-radius: radius

        p
            margin:0

    .modalCY-body
        overflow:hidden
        flex:1

    .modalCY-footer
        flex-shrink:0
        box-shadow: inset 0 1px 0 #ffffff
        border-radius: 0 0 radius radius
        border-top: 1px solid #ddd
        background-color: #f5f5f5
        text-align: right
        padding: 14px 15px 15px

.modalCY.fade
    transition:opacity 0.3s linear, top 0.3s ease-out

.modalCY.fade.in
    top:50%

@media (max-height: 38em)
    .modalCY
        height:90%
        width:90%
        .modalCY-header
            font-size      : 1.3em
            padding-top    : 7px
            padding-bottom : 7px
        .modalCY-body
            overflow:hidden
            flex:1
        .modalCY-footer
            padding-top    : 4px
            padding-bottom : 4px


