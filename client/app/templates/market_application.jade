.right
    a(href="#{app.git}")
        img(src="img/git.png").img-btn
    if app.website !== undefined
        a(href="#{app.website}")
            img(src="img/link.png").img-btn
.app-img.left
    if app.svgSpriteSlug
        img(class=app.svgSpriteSlug)
    else
        img(src="#{app.icon}")


.app-text

    h3 #{app.displayName}
    span.comment= t(app.comment)
    p.par2= t(app.description)
