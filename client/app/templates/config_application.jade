.line
    .left.mod.w75
        strong #{app.displayName}
        if app.version
            span &nbsp;-&nbsp; #{app.version}
        span &nbsp;-&nbsp;
        if app.state === 'installed'
            span.state-label= t('running')
        else
            span.state-label
                | #{app.state}
        if app.needsUpdate
            span &nbsp;
            img.update-notification-icon(
                width=16, src="img/notification-orange.png",
                title="#{t('update required')}", alt="#{t('update required')}")

        .comments
            if app.comment === 'official application'
                img(src="img/happycloud-black.svg", 
                    alt="#{t(app.comment)}", 
                    width="20")
            a(href="#{app.website}", target="_blank")= app.website
    .buttons.left.mod.w25
        div
            button.btn.update-app
                i.fa.fa-refresh.mr1
                | 
                span.label= t('update')
        div
            button.btn.remove-app
                i.fa.fa-trash.mr1
                | 
                span.label= t('remove')
        div
            button.btn.btn-large.start-stop-btn
                i.fa.fa-power-off.mr1
                | 
                span.label= t('stop this app')


